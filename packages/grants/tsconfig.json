{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "baseUrl": ".",
    "module": "esnext",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noEmit": false,
    "outDir": "dist",
    "target": "ES2017",
    "isolatedModules": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowJs": true
  },
  "exclude": ["dist", ".next", "out", "next.config.js"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "references": [{ "path": "../utils" }, { "path": "../hardhat" }]
}
