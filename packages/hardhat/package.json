{
  "name": "@popcorn/hardhat",
  "version": "1.0.0",
  "main": "index",
  "scripts": {
    "build": "yarn clean && yarn hardhat compile",
    "dev": "yarn hardhat node",
    "prettier": "prettier --write 'contracts/**/*.sol'",
    "clean": "rimraf ./cache & rimraf ./artifacts",
    "compile": "yarn clean && hardhat compile ",
    "docify": "rm -rf ./docgen/.gitbook.yaml ./docgen/SUMMARY.md ./docgen/docs/* && node docgen/docify.js",
    "test": "yarn hardhat test test/*.test.ts",
    "test:fork": "yarn hardhat test test/fork/*.test.ts",
    "test:forge": "forge test -vvv",
    "coverage": "yarn hardhat coverage --testfiles 'test/*.test.ts'",
    "prettify": "yarn lint-staged --allow-empty"
  },
  "lint-staged": {
    "*.{sol,ts,tsx}": "prettier --write"
  },
  "devDependencies": {
    "@float-capital/solidity-coverage": "0.7.17",
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@openzeppelin/contracts": "4.4.2",
    "@openzeppelin/test-helpers": "0.5.15",
    "@types/chai": "4.3.0",
    "@types/mocha": "8.2.3",
    "@types/node": "14.18.9",
    "hardhat-contract-sizer": "2.4.0",
    "hardhat-gas-reporter": "1.0.7",
    "openzeppelin-v3": "npm:@openzeppelin/contracts@3.4.2",
    "rimraf": "3.0.2"
  },
  "dependencies": {
    "@anthonymartin/hardhat-deploy": "^0.9.9",
    "@balancer-labs/v2-solidity-utils": "2.0.0",
    "@chainlink/contracts": "0.1.9",
    "@ecmendenhall/ds-test": "^0.0.1",
    "@ecmendenhall/forge-std": "^0.0.1",
    "@ethersproject/hardware-wallets": "5.5.0",
    "@nomiclabs/hardhat-ethers": "2.0.4",
    "@nomiclabs/hardhat-waffle": "2.0.1",
    "@popcorn/utils": "1.0.0",
    "@setprotocol/set-protocol-v2": "0.0.45",
    "@soptq/solidity-docgen": "0.5.17",
    "@typechain/ethers-v5": "7.2.0",
    "@typechain/hardhat": "2.3.1",
    "@uniswap/sdk": "3.0.3",
    "@uniswap/sdk-core": "3.0.1",
    "@uniswap/v2-core": "1.0.1",
    "@uniswap/v2-periphery": "1.1.0-beta.0",
    "@uniswap/v3-sdk": "3.8.1",
    "bluebird": "3.7.2",
    "chai": "4.3.4",
    "dotenv": "10.0.0",
    "eth-provider": "0.9.8",
    "ethereum-waffle": "3.4.0",
    "ethers": "5.5.3",
    "forge-std": "foundry-rs/forge-std",
    "hardhat": "2.9.3",
    "hardhat-secure-signer": "0.0.8",
    "merkle-tree-solidity": "1.0.8",
    "mocha": "8.4.0",
    "prettier": "2.5.1",
    "prettier-plugin-solidity": "1.0.0-beta.19",
    "solc-0.6.0": "npm:solc@0.6.0",
    "solc-0.6.12": "npm:solc@0.6.12",
    "solc-0.7.6": "npm:solc@0.7.6",
    "solc-0.8.0": "npm:solc@0.8.0",
    "solidity-coverage": "0.7.18",
    "surya": "0.4.5",
    "ts-generator": "0.1.1",
